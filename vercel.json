{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverMiddleware": ["~/server.js"]
      }
    }
  ],
  "routes": [
    { "src": "/api/sse", "dest": "server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NUXT_PORT": 3000,
    "SSE_PORT": 3001
  }
}
